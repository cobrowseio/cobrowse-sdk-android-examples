<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CobrowseioStandalone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/secondaryTextColor</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="bottomSheetStyle">@style/Theme.CobrowseioStandalone.BottomSheet</item>
        <item name="bottomSheetDragHandleStyle">@style/Theme.CobrowseioStandalone.BottomSheet.DragHandle</item>
    </style>

    <style name="Theme.CobrowseioStandalone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CobrowseioStandalone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CobrowseioStandalone.Toolbar" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="colorControlNormal">@color/secondaryTextColor</item>
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="actionMenuTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="Theme.CobrowseioStandalone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CobrowseioStandalone.Button" parent="ThemeOverlay.Material3.Button" >
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.CobrowseioStandalone.Button.Alternative" parent="Theme.CobrowseioStandalone.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:backgroundTint">@color/accentLightColor</item>
    </style>
    <style name="Theme.CobrowseioStandalone.Button.NoBackground" parent="Theme.CobrowseioStandalone.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.CobrowseioStandalone.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Theme.CobrowseioStandalone.CustomShapeAppearanceOverlay</item>
    </style>

    <style name="Theme.CobrowseioStandalone.CustomShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.CobrowseioStandalone.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">?colorOnSurface</item>
        <item name="android:alpha">0.3</item>
    </style>

</resources>